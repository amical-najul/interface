# ============================================
# PLANTILLA DE CONFIGURACIÓN - .env.example
# ============================================
# Copia este archivo a .env y modifica los valores
# O usa: cd backend && npm run setup:project
# ============================================

# Servidor
PORT=3001
NODE_ENV=development

# Base de Datos (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=CAMBIAR_POR_PASSWORD_SEGURO
DB_NAME=nombre_bd

# Seguridad (CAMBIAR EN PRODUCCIÓN)
JWT_SECRET=generar_un_secreto_seguro_de_64_caracteres_minimo

# Admin Credentials (para seeding inicial)
ADMIN_EMAIL=admin@tudominio.com
ADMIN_PASSWORD=cambiar_esto

# MinIO / S3 Compatible Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=app-files
MINIO_ACCESS_KEY=CAMBIAR
MINIO_SECRET_KEY=CAMBIAR_POR_SECRETO_LARGO

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Frontend URL (para links en emails)
FRONTEND_URL=http://localhost:8080

# Branding
VITE_APP_NAME=Mi App

# Google OAuth (Opcional)
VITE_GOOGLE_AUTH_ENABLED=false
VITE_GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Producción (Solo para docker-compose.prod.yml)
DOMAIN_NAME=midominio.com
ACME_EMAIL=admin@midominio.com
